		{
			"name": "Create Booking",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "0b9d791d-2c5f-4ceb-8a8b-80247b58e467",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"/* Steps\r",
							"1. Create a variable\r",
							"2. Assign value of environment variable to it\r",
							"3. Add response body json value check for the firstname and lastname\r",
							"*/\r",
							"\r",
							"var fn = pm.variables.get(\"firstname\");\r",
							"var ln = pm.variables.get(\"lastname\");\r",
							"\r",
							"pm.test(\"Firstname\" + fn, function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.booking.firstname).to.eql(fn);\r",
							"});\r",
							"\r",
							"pm.test(\"Lasttname\" + ln, function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.booking.lastname).to.eql(ln);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
